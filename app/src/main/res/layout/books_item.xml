<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#ffffff"
        app:cardElevation="18dp">
        <ImageView
            android:id="@+id/BookItemImageView"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/bookitem"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="#FFCD82">

        <TextView
            android:id="@+id/NoRecBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="100"
            android:textColor="#000000"
            android:fontFamily="@font/poppins"
            android:textSize="10dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ RECOMMENDERS"
            android:textColor="#000000"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="0dp"
            android:textSize="10dp"
            android:layout_marginRight="3dp"/>
    </LinearLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/BookNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="The Power of your Subconscious Mind"
                android:textColor="#000000"
                android:textSize="14dp" />
        </FrameLayout>



</LinearLayout>